<script type="text/javascript">
 function scroll(wraper,left,right,img,speed,or)
 { 
  var wraper = $(wraper);
  var left = $(left);
  var right = $(right);
  var img = $(img).find('ul');
  var w = img.find('li').outerWidth(true);
  var s = speed;
  right.click(function()
       {
        img.animate({'margin-left':-w},function()
                  {
                   img.find('li').eq(0).appendTo(img);
                   img.css({'margin-left':0});
                   });
        });
  left.click(function()
       {
        img.find('li:last').prependTo(img);
        img.css({'margin-left':-w});
        img.animate({'margin-left':0});
        });
  if (or == true)
  {
   ad = setInterval(function() { right.click();},s*1000);
   wraper.hover(function(){clearInterval(ad);},function(){ad = setInterval(function() { right.click();},s*1000);});
  }
 }
 scroll('.img-scroll','.left','.right','.img-list',3);// 
</script>

